<!-- data/demo_data.xml -->
<odoo>
    <record id="section_demo_1" model="website.section">
        <field name="name">Home Hero</field>
        <field name="section_type">type2</field>
        <field name="sequence">1</field>
    </record>

    <record id="banner_demo_1" model="website.banner">
        <field name="name">Welcome Banner</field>
        <field name="section_id" ref="section_demo_1"/>
    </record>

    <record id="banner_item_demo_1" model="website.banner.item">
        <field name="banner_id" ref="banner_demo_1"/>
        <field name="title">Shop Now</field>
        <field name="link_url">/shop</field>
        <field name="image" type="base64" file="sections/static/img/demo1.jpg"/>
    </record>
</odoo>
